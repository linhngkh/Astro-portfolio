---
import Scroller from "../components/Scroller";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="border-black border-x-2">
    <section class="py-6 md:py-20 xl:py-40">
      <div
        class="container mx-auto gap-8 px-4 flex flex-col md:flex-row items-center"
      >
        <div class="md:flex-1 md:order-2">
          <img
            src="/pictureofme.jpeg"
            alt="LINH"
            width="770"
            height="432"
            class="drop-shadow-[10px_-10px_0_rgba(250,204,21,1)] border-black rounded-tl-[150px] rounded-br-[150px] rounded-xl overflow-hidden"
          />
        </div>

        <div class="md:flex-1">
          <h2 class="text-lg md:text-xl uppercase">Hi ðŸ‘‹ I'm Linh.</h2>
